{
  "ts-node": {
    "esm": true,
    "swc": true
  },
  "compilerOptions": {
    "strict": false,
    "rootDir": "src",
    "outDir": "build",
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "moduleResolution": "NodeNext"
  },
  "include": ["src"],
  "exclude": ["bin", "node_modules", "tests"]
}
