{
  "compilerOptions": {
    "outDir": ".",
    "rootDir": ".",
    "baseUrl": ".",
    "module": "commonjs",
    "lib": ["es2020"],
    "target": "es2020",
    "moduleResolution": "node",
    "declaration": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "src/*": ["src/*"],
      "tests/*": ["tests/*"]
    }
  },
  "include": ["*.ts", "**/*.ts"],
  "exclude": ["node_modules", "build", "dist", "tests"]
}
